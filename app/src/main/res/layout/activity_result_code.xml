<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ResultCodeActivity"
    android:background="#ffffff">

    <LinearLayout
        android:id="@+id/headerCertified"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingBottom="40dp"
        android:background="#f4f4f4">

        <ImageView
            android:id="@+id/iconCertified"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:clickable="true"
            android:src="@drawable/certificate" />
        <TextView
            android:id="@+id/textCongratulation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iconCertified"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:textColor="@color/black"
            android:text="CONGRATULATIONS"
            android:textSize="23sp"
            android:textStyle="bold"
            android:typeface="sans"
            />
        <TextView
            android:id="@+id/textSubCong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textCongratulation"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="0dp"
            android:paddingBottom="10dp"
            android:textColor="@color/black"
            android:text="Your Ulteraphy treatment is genuine!"
            android:textSize="13sp"
            android:textStyle="normal"
            android:typeface="sans"
            />

    </LinearLayout>
        <RelativeLayout
            android:id="@+id/card_detail_company"
            android:layout_below="@+id/headerCertified"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/dtext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="0dp"
                android:textColor="@color/cardview_dark_background"
                android:text="Your certified authentic Ultherapy provider is :"
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="sans"
                />
            <TextView
                android:id="@+id/dtext2"
                android:layout_below="@+id/dtext1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="0dp"
                android:textColor="@color/cardview_dark_background"
                android:text="Code "
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="sans"
                />
            <TextView
                android:id="@+id/dtext2content"
                android:layout_below="@+id/dtext1"
                android:layout_toRightOf="@+id/dtext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="0dp"
                android:textColor="@color/cardview_dark_background"
                android:text="QCD-09867"
                android:textSize="12sp"
                android:textStyle="normal"
                android:typeface="sans"
                />
            <TextView
                android:id="@+id/dtext3"
                android:layout_below="@+id/dtext2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="0dp"
                android:textColor="@color/cardview_dark_background"
                android:text="Clinic "
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="sans"
                />
            <TextView
                android:id="@+id/dtext3content"
                android:layout_below="@+id/dtext2"
                android:layout_toRightOf="@+id/dtext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="0dp"
                android:textColor="@color/cardview_dark_background"
                android:text="JAKARTA AESTHETIC CLINIC"
                android:textSize="12sp"
                android:textStyle="normal"
                android:typeface="sans"
                />
            <TextView
                android:id="@+id/dtext4"
                android:layout_below="@+id/dtext3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="0dp"
                android:textColor="@color/cardview_dark_background"
                android:text="Address "
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="sans"
                />
            <TextView
                android:id="@+id/dtext4content"
                android:layout_below="@+id/dtext3"
                android:layout_toRightOf="@+id/dtext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="0dp"
                android:textColor="@color/cardview_dark_background"
                android:text="Street. Gunawarman No. 11, Kebayoran Baru, Jakarta Selatan, 12110"
                android:textSize="12sp"
                android:textStyle="normal"
                android:typeface="sans"
                />
            <TextView
                android:id="@+id/dtext5"
                android:layout_below="@+id/dtext4content"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="0dp"
                android:textColor="@color/cardview_dark_background"
                android:text="Phone "
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="sans"
                />
            <TextView
                android:id="@+id/dtext5content"
                android:layout_below="@+id/dtext4content"
                android:layout_toRightOf="@+id/dtext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="0dp"
                android:textColor="@color/cardview_dark_background"
                android:text="+62 21 72793150"
                android:textSize="12sp"
                android:textStyle="normal"
                android:typeface="sans"
                />
            <TextView
                android:id="@+id/dtext6"
                android:layout_below="@+id/dtext5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/cardview_dark_background"
                android:text="Website "
                android:textSize="12sp"
                android:textStyle="bold"
                android:typeface="sans"
                />
            <TextView
                android:id="@+id/dtext6content"
                android:layout_below="@+id/dtext5content"
                android:layout_toRightOf="@+id/dtext4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="0dp"
                android:paddingRight="15dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:textColor="@color/cardview_dark_background"
                android:text="www.jakartaaestheticclinic.co.id"
                android:textSize="12sp"
                android:textStyle="normal"
                android:typeface="sans"
                />
        </RelativeLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/dtext7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/colorGreyDark"
            android:text="Apakah detail diatas tidak sesuai dengan tempat anda melakukan Ulteraphy ?"
            android:textSize="10sp"
            android:textStyle="italic"
            android:typeface="sans"
            />
        <TextView
            android:id="@+id/dtext8"
            android:layout_below="@+id/dtext7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Jika ya, Laporkan disini"
            android:textSize="10sp"
            android:textStyle="normal"
            android:typeface="sans"
            />
        <Button
            android:id="@+id/buttonReport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Claim Rewards"
            android:background="@color/colorOrange"
            android:layout_marginTop="10dp"
            />

    </LinearLayout>
    <include layout="@layout/include_progress_overlay"/>

</RelativeLayout>